// Vars ------------------------------------------------------------------------
guest-dimension = 233px
guest-highlight-dimension = (guest-dimension * 2) + grid-spacing

// Mixins ----------------------------------------------------------------------
transition-move(po)
  transition(po 0.2s ease)

transition-fade()
  transition(opacity 0.2s ease)

// Styles ----------------------------------------------------------------------
.guest
  width guest-dimension
  height guest-dimension
  display block
  float left
  background darken(color-blue-dark, 60%)

  &:hover .guest-overlay
    top 0
    left 0

  &.move-from-left
    .guest-overlay
      top 0
      bottom auto
      left auto
      right 100%
      transition-move(right)
    &:hover .guest-overlay
      right 0

  &.move-from-right
    .guest-overlay
      top 0
      bottom auto
      left 100%
      right auto
      transition-move(left)
    &:hover .guest-overlay
      left 0

  &.move-from-top
    .guest-overlay
      top auto
      bottom 100%
      left 0
      right auto
      transition-move(bottom)
    &:hover .guest-overlay
      bottom 0

  &.move-from-bottom
    .guest-overlay
      top 100%
      bottom auto
      left 0
      right auto
      transition-move(top)
    &:hover .guest-overlay
      top 0

  &.fade
    .guest-overlay
      top 0
      left 0
      opacity: 0
      transition-fade()
    &:hover .guest-overlay
      opacity 1

.guest-link
  position relative
  width 100%
  height 100%
  display block
  overflow hidden
  background black

  &:hover
    border-bottom none

.guest-image
  width 100%
  height 100%

.guest-overlay
  position absolute
  width 100%
  height 100%
  background black

.guest-info
  display table-cell
  width guest-dimension
  height guest-dimension
  vertical-align middle
  text-align right
  padding 20px
  box-sizing border-box
  font-size 42px
  line-height 46px
  color white
  background color-yellow

.guest-professional-info
  display none

.guest:first-of-type
  width guest-highlight-dimension
  height @width
  border-left none !important

  .guest-image
    transition(-webkit-filter 0.2s ease)

  &:hover .guest-image
    filter(brightness(115%))

  .guest-overlay
    top 0
    left 0
    background none

    .guest-info
      // resetando estilos
      position absolute
      display block
      width auto
      height auto
      padding 0
      box-sizing content-box
      background none
      // setando estilos
      right 50px
      bottom @right

      span
        display inline-block
        padding 12px 15px 10px 15px

        &.guest-professional-info
          font-size 15px
          line-height @font-size
          font-family fonts-main
          background color-blue
          color color-yellow-light

        &.guest-name
          background color-orange
          font-size 66px
          font-family fonts-heading
          line-height @font-size
          letter-spacing -0.06em

        &.guest-last-name
          padding-top 0

        &.guest-company
          font-family fonts-heading-italic
          padding 0

.guest-placeholder
  line-height guest-dimension
  text-align center
  font-size 100px
  color color-blue-dark
  background darken(color-blue-dark, 45%)